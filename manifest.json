{
  "manifest_version": 2,

  "name": "eot",
  "description": "Hide / show conversations on GitHub manually",
  "version": "0.1",

  "content_scripts": [{
    "matches": ["https://github.com/*"],
    "css":      ["content.min.css"],
    "js":      ["content.min.js"]
  }],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
